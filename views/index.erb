<h1>Welcome To Recipe Box</h1>
<!-- change your database schema!!  -->
<div class="row">
  <div class="col col-md-4">
    <div class="card">
      <h2>Recipes:</h2>
      <a href="/recipe/create">Add a Recipe</a>
      <% @recipes.each do |recipe| %>
        <li><a href="/recipe/<%=recipe.id%>"><%=recipe.name%> (Rating: <%=recipe.rating%>)</a></li>
      <% end %>
    </div>
  </div>

  <div class="col col-md-4">
    <div class="card">
      <h2>Categories:</h2>
      <a href="/category/create">Add a Category to Tag your Recipes</a>
      <% @tags.each do |x| %>
        <li> <%=x.food_type%> </li>
      <% end %>
    </div>
  </div>

  <div class="col col-md-4">
    <div class="card">
      <h2>Ingredients:</h2>
      <% @ingredients.each do |x| %>
        <li> <%=x.description%> </li>
      <% end %>

    </div>
  </div>
</div>
